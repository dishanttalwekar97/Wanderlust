<% layout("/layouts/boilerplate") %>

    <style>
      #Filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        text-decoration: none;
      }

      .filter a {

        text-decoration: none;
          color: inherit;
      }



      .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;

      }

      .filter:hover {
        cursor: pointer;
        opacity: 1;
      }

      .fileter p {
        font-size: 0.8rem;

      }

      .tax-info {
        display: none;
      }

      .tax-toggal {
        border: 1px solid black;
        border-radius: 1rem;
        padding: 1rem;
        height: 3.25rem;
        margin-left: 2rem;
        display: flex;
        align-items: center;
      }

      /* Default (Laptop/Desktop) */
      #Filters {
        display: flex;
        flex-wrap: wrap;
        /* normal wrapping on large screens */
        gap: 1rem;
      }
@media (max-width: 768px) {
  #Filters {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    white-space: nowrap;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    position: relative;
  }

  /* ✅ Visible custom scrollbar */
  #Filters::-webkit-scrollbar {
    height: 6px; /* scrollbar height */
  }

  #Filters::-webkit-scrollbar-track {
    background: #f0f0f0; /* light gray track */
    border-radius: 10px;
  }

  #Filters::-webkit-scrollbar-thumb {
    background: #b0b0b0; /* gray scrollbar handle */
    border-radius: 10px;
  }

  #Filters::-webkit-scrollbar-thumb:hover {
    background: #888; /* darker when touched */
  }

  /* Firefox scrollbar style */
  #Filters {
    scrollbar-width: thin;
    scrollbar-color: #b0b0b0 #f0f0f0;
  }

  .filter {
    flex: 0 0 auto;
    padding: 8px 12px;
  }

   /* Scroll + smaller icons on mobile */
  @media (max-width: 992px) {
    #filters {
      overflow-x: auto;
      flex-wrap: nowrap;
      gap: 0.5rem;
      scroll-behavior: smooth;
      -webkit-overflow-scrolling: touch;
    }

    #filters::-webkit-scrollbar {
      display: none;
    }

    .filter {
      flex: 0 0 auto;
      margin-right: 1rem;
      margin-top: 0.5rem;
    }

    .filter i {
      font-size: 1rem;
    }

    .filter p {
      font-size: 0.7rem;
    }

    /* Compact toggle version */
    .tax-toggle {
      border: none;
      padding: 0.3rem 0.5rem;
      margin-left: 2rem;
      height: auto;
    }

    .tax-toggle label {
      display: none; /* hide text label */
    }

    .form-check-input {
      width: 2rem;
      height: 1rem;
    }
  }
}


    </style>
