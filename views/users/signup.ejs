<% layout("/layouts/boilerplate")  %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
    <div class="col-8 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">

            <label for="username" class="label-form">username</label>
            <input class="form-control" type="text" name="username" id="username" required>
            <div class="valid-feedback">Title Look Good!</div>
        </div>

        <div class="mb-3 mt-3">

            <label for="email" class="label-form">Email</label>
            <input class="form-control" type="email" name="email" id="email" required>
           
        </div>

        <div class="mb-3 mt-3">

            <label for="password" class="label-form">Password</label>
            <input class="form-control" type="password" name="password" id="password" required>
           
        </div>
        <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>